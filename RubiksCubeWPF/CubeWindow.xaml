<Window x:Class="RubiksCubeWPF.CubeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cube="clr-namespace:RubiksCubeWPF"
    Title="Rubik's Cube" Height="600" Width="800" Loaded="Window_Loaded" Background="CadetBlue">
    <Grid>
		<TextBlock Height="21" HorizontalAlignment="Right" Margin="0,0,12,0" Name="txtCubeOps" VerticalAlignment="Bottom" Width="372" />
		<TextBox Height="23" HorizontalAlignment="Left"  Margin="4,0,0,0" Name="txtInput" MouseDown="txtInput_MouseDown" MouseUp="txtInput_MouseUp" VerticalAlignment="Bottom" Width="384" />
		<DockPanel Margin="0,0,0,29" Name="cubePanel">
			<Viewport3D x:Name="viewport">
				<Viewport3D.Camera>
					<PerspectiveCamera x:Name="camera" Position="30 30 30" LookDirection="-1 -1 -1" UpDirection="0 1 0" FieldOfView="90"></PerspectiveCamera>
				</Viewport3D.Camera>
			</Viewport3D>
		</DockPanel> 
	</Grid>
</Window>
